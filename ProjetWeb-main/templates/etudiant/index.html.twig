{% extends 'table.html.twig' %}

{% block body %}

    <table class="table">
        <thead>
            <tr>
                <th>NumInscription</th>
                <th>Email</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Niveau</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for etudiant in etudiants %}
            <tr>
                <td>{{ etudiant.numInscription }}</td>
                <td>{{ etudiant.email }}</td>
                <td>{{ etudiant.nom }}</td>
                <td>{{ etudiant.prenom }}</td>
                <td>{{ etudiant.niveau.getNiveauName2(etudiant.filiere)}}</td>
                <td>
                    <a class="btn btn-secondary form-btn" href="{{ path('etudiant_show', {'id': etudiant.id}) }}">show</a>
                    <a class="btn btn-secondary form-btn" href="{{ path('etudiant_edit', {'id': etudiant.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary form-btn" href="{{ path('etudiant_new') }}">Create new</a>
{% endblock %}
