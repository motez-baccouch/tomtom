{% extends 'table.html.twig' %}

{% block body %}
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Url</th>
                <th>Ordre</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for link in links %}
            <tr>
                <td>{{ link.id }}</td>
                <td>{{ link.nom }}</td>
                <td>{{ link.url }}</td>
                <td>{{ link.ordre }}</td>
                <td>
                    <a class="btn btn-secondary form-btn" href="{{ path('link_show', {'id': link.id}) }}">show</a>
                    <a class="btn btn-secondary form-btn" href="{{ path('link_edit', {'id': link.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary form-btn" href="{{ path('link_new') }}">Create new</a>
{% endblock %}
